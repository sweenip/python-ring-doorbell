        {
            "name": "Python Debugger: ring_doorbell/cli.py with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "ring_doorbell/cli.py",
            "console": "integratedTerminal",
            "args": [
                "motion_detection", "--device-name", "Front Door" , "--on"
            ]
        },
        {
            "name": "Python Debugger: current file",
